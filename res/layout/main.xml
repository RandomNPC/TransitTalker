<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="5.66" >

            <Button
                android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/one"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/two"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/three"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/four"
                android:textSize="17pt" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight=".66"
                android:gravity="center"
                android:text="@string/BKSP"
                android:textSize="17pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="5.66" >

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/five"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/six"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/seven"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/eight"
                android:textSize="17pt" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/nine"
                android:textSize="17pt" />

            <Button
                android:id="@+id/buttonSet"
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:layout_weight=".66"
                android:gravity="center"
                android:text="@string/SET"
                android:textSize="17pt" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/displayTOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:gravity="center_horizontal"
        android:text="@string/tRaNsIt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/displayBOTTOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayTOP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:text="@string/TaLkEr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayBOTTOM"
        android:layout_alignParentRight="true"
        android:src="@drawable/searching"/>

    <ImageView
        android:id="@+id/fence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search"
        android:layout_below="@+id/search"
        android:src="@drawable/geofence" />

    <ImageView
        android:id="@+id/pr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/displayBOTTOM"
        android:layout_alignParentLeft="true"
        android:src="@drawable/prcode" />

</RelativeLayout>